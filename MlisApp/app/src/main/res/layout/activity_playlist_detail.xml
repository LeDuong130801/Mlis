<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.PlaylistDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@color/background">
        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/icBack"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/normal_text" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/icMore"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/baseline_more_vert_24"
                app:tint="@color/normal_text" />
        </LinearLayout>
        <ScrollView
            android:id="@+id/scrollViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/lay1"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_8sdp">
                <ImageView
                    android:id="@+id/ivPlaylist"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_100sdp"/>
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="aaaaaaaaaaaa"
                    android:textColor="@color/normal_text"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16ssp"/>
                <TextView
                    android:id="@+id/tvAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="adasdsa"
                    android:textColor="@color/normal_text"
                    android:textSize="@dimen/_10ssp"/>
                <TextView
                    android:id="@+id/tvInf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="adasdsa"
                    android:textColor="@color/subtitle_text"
                    android:textSize="@dimen/_10ssp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lvPodcast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    />

            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/lay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:id="@+id/isFavorite"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/outline_favorite_border_24"
                app:tint="@color/normal_text" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btListenChap1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/docChuongDau"
                android:textAllCaps="false"
                android:textColor="@color/normal_text"
                android:textSize="@dimen/_12ssp"
                android:backgroundTint="@color/background"/>
        </LinearLayout>

    </LinearLayout>

</layout>