<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.HomeScreen">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawerHomeScreen">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/lvPodcast"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/llplaying"/>
            <LinearLayout
                android:id="@+id/llplaying"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal"
                android:visibility="visible">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageAudio"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:src="@drawable/qiqi"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/tentruyen"
                    android:textSize="@dimen/_14ssp"
                    android:layout_margin="@dimen/_2sdp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icBack"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:src="@drawable/back_svgrepo_com"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icPauseResume"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:src="@drawable/ic_baseline_play_arrow_24"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icNext"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:src="@drawable/back_svgrepo_com"
                    android:background="@drawable/circle_shape"
                    android:backgroundTint="@color/light_green"
                    android:rotation="180"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navHomeScreen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/header_home_screen"
            app:menu="@menu/menu_home_screen"/>
    </androidx.drawerlayout.widget.DrawerLayout>

</layout>