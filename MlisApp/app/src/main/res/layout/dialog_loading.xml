        android:text="@string/dangtaidulieu"
        android:textSize="@dimen/_13ssp"
        android:layout_marginTop="@dimen/_6sdp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"/>

</LinearLayout>