<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/_280sdp"
    android:background="@color/dark"
    android:padding="@dimen/_5sdp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/i_t_n_danh_s_ch_y_u_th_ch"
        android:textColor="@color/normal_text"
        android:textSize="@dimen/_14ssp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etFavoriteName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/normal_text"
            android:hint="Tên danh sách yêu thích"
            android:textColorHint="@color/subtitle_text"/>
        <ImageButton
            android:id="@+id/ibtDone"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:src="@drawable/done24"
            android:scaleY="1.3"
            android:scaleX="1.3"
            android:background="@color/tranparent"/>
    </LinearLayout>

</LinearLayout>